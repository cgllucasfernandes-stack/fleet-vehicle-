<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="view_fleet_vehicle_reservation_tree" model="ir.ui.view">
<field name="name">fleet.vehicle.reservation.list</field>
<field name="model">fleet.vehicle.reservation</field>
<field name="arch" type="xml">
<list decoration-info="state == 'draft'" decoration-success="state == 'confirmed'">
<field name="name"/>
<field name="vehicle_id"/>
<field name="employee_id"/>
<field name="start_datetime"/>
<field name="end_datetime"/>
<field name="state" widget="badge"/>
</list>
</field>
</record>
<record id="view_fleet_vehicle_reservation_form" model="ir.ui.view">
<field name="name">fleet.vehicle.reservation.form</field>
<field name="model">fleet.vehicle.reservation</field>
<field name="arch" type="xml">
<form>
<header>
<button name="action_confirm" string="Confirmar" type="object" class="oe_highlight" invisible="state != 'draft'"/>
<button name="action_draft" string="Rascunho" type="object" invisible="state == 'draft'"/>
<field name="state" widget="statusbar"/>
</header>
<sheet>
<div class="oe_title"><h1><field name="name" readonly="1"/></h1></div>
<group>
<group>
<field name="vehicle_id" domain="[('active', '=', True)]"/>
<field name="employee_id"/>
</group>
<group>
<field name="start_datetime"/>
<field name="end_datetime"/>
</group>
</group>
</sheet>
</form>
</field>
</record>
</odoo>